{% macro primaryButton(buttonText = "") %}
    <button onclick="{{onclick}}" class="py-2 px-5 text-white text-ty-h5 font-merri bg-turquoise rounded border-2 border-transparent hover:border-turquoise hover:bg-transparent hover:text-turquoise transition-all duration-300">
        {{ buttonText }}
    </button>
{% endmacro %}

{% macro secondaryButton(buttonText = "", type = "button") %}
    <button type={{ type }} 
        class="py-2 px-5 text-ty-p bg-transparent text-turquoise rounded border-2 border-turquoise font-merri font-bold a-vp:mt-2 b-vp:mt-0 hover:bg-turquoise hover:border-transparent hover:text-white transition-all duration-300">
        {{ buttonText }}
    </button>
{% endmacro %}