{% import "macros/button.njk" as button %}

<div class="mb-32">

	<h2 class="text-center text-ty-h2 font-merri font-bold mb-8">
    	Purchase Worksheets
  	</h2>

	<div class="flex a-vp:flex-col-reverse d-vp:flex-row items-center justify-between a-vp:px-3 e-vp:px-0">

		<div class="px-10 pb-10 pt-5 bg-lightCyan rounded-large a-vp:w-full e-vp:w-5/12 d-vp:w-7/12">

			{# country selection #}
			<div class="flex items-center mb-8">

				<p class="font-sourceSans font-semibold text-ty-p mr-6">Select Country: </p>

				<div class="relative">
					<h6 class="mr-5 font-merri font-bold text-ty-h6">United States</h6>

					<div class="dropdown absolute bg-skyBlue rounded-small p-3 w-dropdown whitespace-nowrap z-50">

						<div class="flex mb-2 cursor-pointer">
							<img src="/static/images/us-flag.png"  alt="flag" width="20px" class="mr-2"/>
							<h6 class="mr-5 font-merri font-bold text-ty-h6">United States</h6>
						</div>

						<div class="flex mb-2 cursor-pointer">
							<img src="/static/images/gb-flag.png" alt="flag" width="20px" class="mr-2"/>
							<h6 class="mr-5 font-merri font-bold text-ty-h6">Great Britain</h6>
						</div>

						<div class="flex cursor-pointer">
							<img src="/static/images/in-flag.png" alt="flag" width="20px" class="mr-2"/>
							<h6 class="mr-5 font-merri font-bold text-ty-h6">India</h6>
						</div>

					</div>

				</div>

				<p class="font-sourceSans text-ty-ps text-turquoise cursor-pointer change">Change</p>

			</div>
			{# country selection #}

			<p class="font-sourceSans font-semibold text-ty-p mb-4">Worksheets to purchase</p>

			{# worksheet selection #}
			<div class="mb-8">

				{% for item in worksheet.worksheets %}

					<div class="worksheet-item flex items-center justify-between bg-white rounded-small border-tiny border-black px-5 py-1 mb-2 cursor-pointer">

						<div class="flex items-center">

							{# <input type="checkbox" name="worksheets" value={{ item.name }} id={{ item.id }}  class="cursor-pointer mr-6 border-2 border-black"> #}

							<img src="/static/images/outline.png" alt="checkbox" width="18px" class="checkbox-img mr-6 select-none"/>

							{# <label for={{ item.id }}> #}

							<div class="select-none">

								<p class="font-sourceSans text-ty-ps font-semibold">{{ item.name }}</p>

								<p class="font-sourceSans text-xs">{{ item.ageGroup }}</p>

							</div>
							{# </label> #}

						</div>

						<div class="hover-trigger relative">

							<img src="/static/images/info.png" alt="info" width="24px" class="cursor-pointer"/>

							{# info-card #}
							{% include "sections/info-card.njk" %}
							{# info-card #}

						</div>

					</div>

				{% endfor %}

			</div>
			{# worksheet selection #}

			<div class="mb-3">

				<button class="mb-3 py-2 px-5 bg-turquoise text-white text-ty-p font-bold rounded-small font-merri a-vp:w-full border-2 border-transparent hover:border-turquoise hover:bg-transparent hover:text-turquoise transition-all duration-300">
      		Purchase
    		</button>

				{{ button.secondaryButton("Get samples of worksheets", "text-ty-h5 w-full") }}

			</div>

			<p class="font-sourceSans font-semibold text-ty-ps text-center">Not Ready to Purchase? <a href="" class="text-blue-500">Get samples</a> of our worksheets</p>

		</div>

		<div class="a-vp:mb-6 d-vp:mb-0 flex justify-center items-center d-vp:w-1/2">
			<img src="/static/images/undraw_booking.png" alt="Undraw booking" width="90%"/>
		</div>

	</div>

</div>

