{% extends "modal/modal-shell.njk" %}

{% block content %}

  <div class="flex flex-col items-center">

    <img src="/static/images/order-complete.png" alt="Order Complete" width="190px" class="mb-4"/>

    <h4 class="text-ty-h4 font-bold font-merri mb-4">Order Complete!</h4>

    <p class="font-bold font-sourceSans text-center text-ty-p">Please check your inbox for confirmation.</p>

